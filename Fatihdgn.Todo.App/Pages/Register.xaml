<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fatihdgn.Todo.App.Pages.Register"
             BackgroundColor="{StaticResource Gray600}">
    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <StackLayout Spacing="20" Padding="20" MinimumWidthRequest="400">
            <Label Text="Register" FontSize="24" TextColor="{StaticResource Gray100}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Label Text="{Binding EmailError}" IsVisible="{Binding HasEmailError}" TextColor="{StaticResource Red300Accent}" />
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
            <Label Text="{Binding PasswordError}" IsVisible="{Binding HasPasswordError}" TextColor="{StaticResource Red300Accent}" />
            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True"/>
            <Label Text="{Binding ConfirmPasswordError}" IsVisible="{Binding HasConfirmPasswordError}" TextColor="{StaticResource Red300Accent}" />
            <Button Text="Register" Command="{Binding RegisterCommand}" />
            <Label Text="{Binding Error}" IsVisible="{Binding HasError}" TextColor="{StaticResource Red300Accent}" />
        </StackLayout>
    </Grid>
</ContentPage>